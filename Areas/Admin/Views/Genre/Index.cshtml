@model QFX.ViewModels.GenreVm.IndexVm
<form>

    <div class="container">
        <div class="card shadow w-75 text-center mx-auto">
            <div class="card-body text-center">
                <div class="toolbar row mb-3">
                    <div class="col-12">
                        <table class="table table-borderless table-hover">
                            <thead>

                                <tr>
                                    @* <th>
                                    <h3>
                                    S.NO
                                    </h3>
                                    </th> *@
                                    <th>
                                        <h3>
                                            Name
                                        </h3>
                                    </th>
                                    <th>
                                        <h3>
                                            Action
                                        </h3>
                                    </th>

                                </tr>
                            </thead>
                            <tbody class=" table-striped">
                                @foreach (var genre in Model.Genres)
                                {
                                    @* var i = 1; *@
                                    <tr>
                                        @* <td>@i++</td> *@
                                        <td class="text-dark">@genre.Name</td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-md border-0 more-horizontal" type="button"
                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                    @* <span class="text-muted sr-only">Action</span> *@
                                                    @* <i class="bi bi-three-dots"></i> *@
                                                    @* <i class="bi bi-three-dots-vertical"></i> *@
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                        fill="currentColor" class="bi bi-three-dots-vertical"
                                                        viewBox="0 0 16 16">
                                                        <path
                                                            d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0" />
                                                    </svg>

                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-right">
                                                    <li>
                                                        <button class="dropdown-item" asp-controller="Genre"
                                                            asp-action="Update" asp-route-id="@genre.ID">
                                                            <i class="bi bi-pencil"></i>&nbsp; Edit
                                                        </button>
                                                    </li>
                                                    <li>
                                                        @* <a asp-controller="Image" asp-action="AddMovie"
                                                    asp-route-productId="@movie.ID"
                                                    class="btn border-0 dropdown-item">
                                                    <i class="bi bi-upload"></i>&nbsp Upload multiple
                                                    image
                                                    </a> *@
                                                    </li>
                                                    <li>
                                                        <!-- Button trigger modal -->
                                                        <button class="dropdown-item" type="button" data-bs-toggle="modal"
                                                            data-bs-target="#exampleModal-@genre.ID">
                                                            <i class="bi bi-trash"></i>&nbsp Delete
                                                        </button>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                     <!-- Modal -->
                                                <div class="modal fade" id="exampleModal-@genre.ID" tabindex="-1"
                                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h1 class="modal-title fs-5" id="exampleModalLabel">
                                                                    Warning!!!
                                                                </h1>
                                                                <button type="button" class="btn-close"
                                                                    data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                Are you sure you want to delete?
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-bs-dismiss="modal">Close</button>
                                                                <button asp-action="Delete" class="btn btn-danger"
                                                                    asp-controller="Genre" asp-route-id="@genre.ID"
                                                                    class="dropdown-item">
                                                                    Delete
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                }

                            </tbody>

                        </table>
                    </div>
                </div>

            </div>
            <a class="fixed-plugin-button text-dark position-fixed px-3 py-2">
                <i class="fa fa-cog py-2" aria-hidden="true"> </i>
            </a>
        </div>
    </div>

</form>