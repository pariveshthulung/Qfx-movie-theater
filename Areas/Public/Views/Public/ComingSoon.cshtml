@{
  Layout = "_PublicLayout";
}
@model QFX.ViewModels.PublicVm.MovieVm
<div class="mx-5 mt-5">
  <h3 class="mx-5" style="color: #9195F6;">Coming Soon</h3>
</div>
<div class="row mx-5 mb-5">

  @foreach (var show in Model.Shows)
  {
    <div class="col-1 mx-4">

      <a class="product-item" asp-action="Detail" asp-route-id="@show.Movie.ID">

        <img src="/Public/images/movie/@show.Movie.ImageUrl" class="card-img-top rounded mx-auto d-block"
          style="width:150px; height:250px; object-fit:contain;">
      </a>

    </div>
  }
</div>