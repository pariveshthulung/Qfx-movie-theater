@model QFX.ViewModels.AudiVm.UpsertVm
<form method="post" enctype="multipart/form-data">
    <br />
    <div class="container">
        <div class="card shadow border-0">
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-md-12 mb-5 mb-md-0">
                            <h2 class="h3 mb-3 text-black">Audi</h2>
                            <div class="p-3 p-lg-5 border bg-white">
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label asp-for="Name" class="text-black">Name <span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control" asp-for="Name" required>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Row" class="text-black">Row <span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control" asp-for="Row" required>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Column" class="text-black">Column <span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control" asp-for="Column" required>
                                    </div>
                                     <div class="col-md-4">
                                        <label class="text-black">Location <span
                                                class="text-danger">*</span></label>
                                                <select asp-for="LocationID" asp-items="@Model.LocationList()" class="form-select">
                                            <option selected disabled>Select a location</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Add Audi</button>
                </div>
            </div>
        </div>
    </div>
</form>
