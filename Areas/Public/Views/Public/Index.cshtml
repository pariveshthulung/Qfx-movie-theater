@model QFX.ViewModels.PublicVm.IndexVm
@{
  Layout = "_PublicLayout";
}

@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> *@
<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="0" class="active"
      aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="1"
      aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="2"
      aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <a asp-action="BuyTicket" asp-controller="Public" asp-route-ShowID="@Model.Shows[0].ID" asp-route-MovieID="@Model.Shows[0].MovieID">
      <div class="carousel-item active">
        <img style="width: 1440px; height:540px; object-fit:contain;" src="/Public/images/movie/@Model.Shows[0].Movie.CoverUrl" class="d-block" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h1 class="font-weight-bold">@Model.Shows[0].Movie.Title</h1>
        </div>
    </a>
  </div>
  <a asp-action="BuyTicket" asp-controller="Public" asp-route-ShowID="@Model.Shows[1].ID" asp-route-MovieID="@Model.Shows[0].MovieID">

    <div class="carousel-item">
      <img style="width: 1440px; height:540px; object-fit:contain;" src="/Public/images/movie/@Model.Shows[1].Movie.CoverUrl" class="d-block " alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h1 class="font-weight-bold">@Model.Shows[1].Movie.Title</h1>
        @* <p>Some representative placeholder content for the second slide.</p> *@
      </div>
    </div>
  </a>
  <a asp-action="BuyTicket" asp-controller="Public" asp-route-ShowID="@Model.Shows[2].ID" asp-route-MovieID="@Model.Shows[0].MovieID">
    <div class="carousel-item">
      <img style="width: 1440px; height:540px; object-fit:contain;" src="/Public/images/movie/@Model.Shows[2].Movie.CoverUrl" class="d-block " alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h1 class="font-weight-bold">@Model.Shows[2].Movie.Title</h1>
        @* <p>Some representative placeholder content for the third slide.</p> *@
      </div>
    </div>
  </a>

</div>
<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  <span class="visually-hidden">Previous</span>
</button>
<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
  <span class="carousel-control-next-icon" aria-hidden="true"></span>
  <span class="visually-hidden">Next</span>
</button>
</div>
<div class="mx-5 mt-5">
  <h3 class="mx-5" style="color: #9195F6;">Now Showing</h3>
</div>
<div class="row mx-5">
  @foreach (var show in Model.Shows.Where(x => x.ShowStatus == "Now Showing").DistinctBy(x=>x.MovieID).ToList())
  {
    <div class="col-1 mx-4">

      <a class="product-item" asp-action="BuyTicket"  asp-route-ShowID="@show.ID" asp-route-MovieID="@show.MovieID">

        <img src="/Public/images/movie/@show.Movie.ImageUrl" class="card-img-top rounded mx-auto d-block"
          style="width:150px; height:250px; object-fit:contain;">
        @* <div class="card-body">
      <div class="pl-1">
      <h3 class="product-title col-12 text-truncate">@product.Name</h3>
      <strong class="product-price">$@product.Price</strong>
      <span class="icon-cross mb-2">
      <img src="/Public/images/cross.svg" class="img-fluid">
      </span>
      </div>

      </div> *@
      </a>

    </div>
  }
</div>

<div class="mx-5 mt-5">
  <h3 class="mx-5" style="color: #9195F6;">Coming Soon</h3>
</div>
<div class="row mx-5 mb-5">

  @foreach (var show in Model.Shows.Where(x => x.ShowStatus == "Coming soon").DistinctBy(x=>x.MovieID).ToList())
  {
    <div class="col-1 mx-4">

      <a class="product-item" asp-action="Detail" asp-route-id="@show.Movie.ID">

        <img src="/Public/images/movie/@show.Movie.ImageUrl" class="card-img-top rounded mx-auto d-block"
          style="width:150px; height:250px; object-fit:contain;">
      </a>

    </div>
  }
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
